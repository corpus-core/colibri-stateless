{
    "name": "@corpus-core/colibri-stateless",
    "version": "0.1.0",
    "description": "Colibri is a stateless and trustless ethereum client, which is optimized for the mobile apps or embedded devices, because it does not hols the state, but verifies on demand.",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "test": "npm run test:node && npm run test:webpack",
        "test:node": "node --test test/*.test.mjs",
        "test:webpack": "npm run webpack:install && npm run webpack:build",
        "webpack:install": "cd webpack && npm install --legacy-peer-deps",
        "webpack:build": "cd webpack && npm run build",
        "webpack:start": "cd webpack && npm run start"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/corpus-core/c4.git"
    },
    "keywords": [
        "beacon",
        "ethereum",
        "client",
        "minimum",
        "stateless",
        "proof",
        "verifier"
    ],
    "author": "Simon Jentzsch <simon@corpus.io>",
    "contributors": [
        {
            "name": "Simon Jentzsch",
            "email": "simon@corpus.io"
        },
